<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/layoutwidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_16"
                android:text="@string/team_a"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/grey"
                android:textSize="@dimen/_24"/>

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/_24"
                android:text="@string/_0"
                android:textColor="@color/black"
                android:textSize="@dimen/_56" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8"
                android:layout_marginLeft="@dimen/_24"
                android:layout_marginRight="@dimen/_24"
                android:onClick="addThreeForTeamA"
                android:text="@string/_3_points" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8"
                android:layout_marginLeft="@dimen/_24"
                android:layout_marginRight="@dimen/_24"
                android:onClick="addTwoForTeamA"
                android:text="@string/_2_points" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8"
                android:layout_marginLeft="@dimen/_24"
                android:layout_marginRight="@dimen/_24"
                android:onClick="addOneForTeamA"
                android:text="@string/free_throw" />



        </LinearLayout>

        <View
            android:layout_width="@dimen/line"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/linetop"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="@dimen/layoutwidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_16"
                android:text="@string/team_b"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/grey"
                android:textSize="@dimen/_24"/>

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="@dimen/_24"
                android:text="@string/_0"
                android:textColor="@color/black"
                android:textSize="@dimen/_56" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8"
                android:layout_marginLeft="@dimen/_24"
                android:layout_marginRight="@dimen/_24"
                android:onClick="addThreeForTeamB"
                android:text="@string/_3_points" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8"
                android:layout_marginLeft="@dimen/_24"
                android:layout_marginRight="@dimen/_24"
                android:onClick="addTwoForTeamB"
                android:text="@string/_2_points" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8"
                android:layout_marginLeft="@dimen/_24"
                android:layout_marginRight="@dimen/_24"
                android:onClick="addOneForTeamB"
                android:text="@string/free_throw" />



        </LinearLayout>

    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_32"
        android:onClick="resetScore"
        android:text="@string/reset" />


</RelativeLayout>